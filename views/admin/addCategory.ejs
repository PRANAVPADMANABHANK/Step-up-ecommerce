                  <label for="categoryDescription">Subcategory</label>
                  <input class="form-control" id="categoryDescription" rows="3"
                    placeholder="Enter category description" name="description" required></input>
                  <div class="invalid-feedback">
                    Please enter a subcategory name.
                  </div>
                </div> -->
                <br>
                <button id="submitbtn" value="Submit" type="submit" class="btn btn-primary">Submit</button>
                <a href="#" class="btn btn-secondary">Cancel</a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    
<!-- New two-column table section below the form -->
<!-- admin/addCategory.ejs -->
<div class="container mt-3">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card">
          <div class="card-body">
            <h4>Added Categories:</h4>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">No</th> <!-- Add index position column -->
                  <th scope="col">Category</th>
                  <!-- <th scope="col">Subcategory</th> -->
                </tr>
              </thead>
              <tbody>
                <% category.forEach((element, index) => { %> <!-- Add index position in the forEach loop -->
                <tr>
                  <td><%= index + 1 %></td> <!-- Display index position -->
                  <td><%= element.category %></td>
                  <!-- <td><%#= element.description %></td> -->
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  
    <script>
      // JavaScript for form validation
      (function() {
        'use strict';
        window.addEventListener('load', function() {
          var forms = document.getElementsByClassName('needs-validation');
          var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
              if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add('was-validated');
            }, false);
          });
        }, false);
      })();
    </script>
  </body>
  