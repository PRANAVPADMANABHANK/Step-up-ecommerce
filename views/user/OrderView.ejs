      <div class="col-md-10 d-flex justify-content-around mt-2">
        <div class="border rounded p-3" style="background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0,0,0,0.2);">
          <ul class="list-inline mb-0">
            <li class="list-inline-item">
              <a href="/orders" class="nav-link" style="font-size: 20px; color: black;">
                <i class="fas fa-search me-2"></i>Orders
              </a>
            </li>
            <li class="list-inline-item">
              <a href="/order-not-shipped" class="nav-link" style="font-size: 20px; color: black;">
                <i class="fas fa-search me-2"></i>Not yet shipped
              </a>
            </li>
            <li class="list-inline-item">
              <a href="/order-cancelled-list" class="nav-link" style="font-size: 20px; color: black;">
                <i class="fas fa-search me-2"></i>Cancelled
              </a>
            </li>
            <li class="list-inline-item">
              <a href="/order-returned-list" class="nav-link" style="font-size: 20px; color: black;">
                <i class="fas fa-search me-2"></i>Returned
              </a>
            </li>
          </ul>
        </div>
      </div>
      
      
    
        



    <div class="col-md-10  ">
      <% locals.orders.forEach(element=> { %>
        <div class="card mt-4 border border-2">
          <div class="card-header d-flex justify-content-around text-dark">
            <span>Order <%= element.paymentstatus %>
                <%= new Date(element.createdAt).toLocaleString('en-US', { month: 'short' , day: 'numeric' ,
                  year: 'numeric' , hour12: true }) %></span>
            <span> Address : <%= element.deliveryDetails.streetaddress %></span>
            <span> Total: &#8377; <%= element.totalAmount %> </span>
            <span> Order Summary</span>
          </div>
          <% element.products.forEach(prd=> { %>

            <div class="card-body border border-2">
              <div class="row p-2 bg-white border rounded">
                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image"
                    src="/uploads/<%= prd.item.images[0] %>" style="height: 100px; width: 100px"></div>
                <div class="col-md-6 mt-1">
                  <h5><b>
                      <%= prd.item.productname%>
                    </b></h5>
                  <div class="d-flex flex-row">

                  </div>

                  <p class="text-justify text-truncate para mb-0">Quantity : <%= prd.quantity %><br><br></p>
                  <h6><span class="fw-medium">order-status :</span> <span>
                      <%= prd.orderstatus %>
                    </span> <br><br></h6>
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                  <!-- <div class="d-flex flex-row align-items-center">
                              <h4 class="mr-1">Rs. <%#= prd.item.salePrice %></h4><span class="strike-text"></span>                     
                          </div> -->
                  <h6 class="text-success">
                    <%= prd.deliverystatus %>
                  </h6>
                  <div class="d-flex flex-column mt-4">
                    <% if (prd.deliverystatus !=='returned' ) { %>
                      <button class="btn btn-outline-secondary btn-sm" <%=prd.orderstatus==='cancelled' ? 'hidden' : ''
                        %> type="button" onclick="location.href='/invoice/?orderId=<%= element._id %>&productId=<%=
                            prd.item._id %>';">Invoice</button>

                      <% if (prd.deliverystatus==='delivered' ) { %>
                        <button class="btn btn-danger btn-sm mt-2"
                          onclick="returnOrder('<%= element._id %>','<%= prd.item._id %>')" type="button">Return order
                        </button>
                  </div>
                  <% } else{ %>
                    <button class="btn btn-danger btn-sm mt-2" <%=prd.orderstatus==='cancelled' ? 'hidden' : '' %>
                      onclick="cancelOrder('<%= element._id %>','<%= prd.item._id %>')" type="button" >Cancel order
                    </button>
                </div>
                <% } %>
                  <% } %>


              </div>
            </div>
        </div>

        <% }) %>
    </div>
    <% }) %>

  </div>

</div>
</div>







<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>

  function cancelOrder(orderId, productId) {
    // Display a confirmation SweetAlert message
    swal({
      title: "Confirmation",
      text: "Are you sure you want to proceed?",
      icon: "info",
      buttons: ["Cancel", "Confirm"],
      dangerMode: true,
      closeOnClickOutside: false,
      closeOnEsc: false,
      customClass: {
        container: 'my-swal-container',
        content: 'my-swal-content',
        title: 'my-swal-title',
        cancelButton: 'my-swal-cancel-button',
        confirmButton: 'my-swal-confirm-button'
      }})
      .then((willCancel) => {
        if (willCancel) {
          // Redirect to the cancel order page if the user confirms the cancellation
          location.href = `/cancel-order/?orderId=${orderId}&productId=${productId}`;
        }
      });
  }

  function returnOrder(orderId, productId) {
    swal({
      title: "Confirmation",
      text: "Are you sure you want to proceed?",
      icon: "info",
      buttons: ["Cancel", "Confirm"],
      dangerMode: true,
      closeOnClickOutside: false,
      closeOnEsc: false,
      customClass: {
        container: 'my-swal-container',
        content: 'my-swal-content',
        title: 'my-swal-title',
        cancelButton: 'my-swal-cancel-button',
        confirmButton: 'my-swal-confirm-button'
    }})
      .then((willCancel) => {
        if (willCancel) {
          // Redirect to the cancel order page if the user confirms the cancellation
          location.href = `/return-order/?orderId=${orderId}&productId=${productId}`;
        }
      });
  }
</script>