        <form action="/otp" method="post">
            <h1>HELLO</h1>
            <h2>Welcome to OTP Authentication</h2>
            <input name="number" style="margin-left: 94px;" placeholder="Enter phone number eg:1234567890" autocomplete="off" required >
            <button type="submit" name="button">Submit</button>
        </form>
    </div>
</body>
</html>








