<body>

	<div class="limiter">
		<div class="container-login100" style="background-image: url('');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<form id="myForm" class="login100-form validate-form" action="/signup" method="post"
					onsubmit="return validateForm()">
					<!-- Form elements -->

					<span class="login100-form-title p-b-49">
						Sign Up
					</span>

					<div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
						<span class="label-input100">Username</span>
						<input class="input100" type="text" id="username" name="name" placeholder="Type your username">

						<span class="focus-input100" data-symbol="&#xf206;"></span><br>
						<span id="username-error" style="color: red;"></span><br>
					</div>
					<div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
						<span class="label-input100">Email</span>
						<input class="input100" type="email" id="email" name="email" placeholder="Type your email">

						<span class="focus-input100" data-symbol="&#xf206;"></span>
