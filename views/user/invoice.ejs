<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Invoice | My Ecommerce Website</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> -->
</head>
<body>

  <div class="container mt-5 border border-2 bg-success-subtle" id="printableArea">
    <div class="row">
        <div class="col-md-6">
          <h2 class="fw-bold mb-3">Invoice #</h2>
          <% orders.forEach(element => { %>
            <div class="shipping-address mb-5">
              <h4 class="mb-3">Shipping Address:</h4>
              <p><%= element.deliveryDetails.firstname +' '+ element.deliveryDetails.lastname %></p>
              <p><%= element.deliveryDetails.mobile %></p>
              <p><%= element.deliveryDetails.streetaddress %></p>
              <p><%= element.deliveryDetails.town %></p>
              <p><%= element.deliveryDetails.state %></p>
              <p><%= element.deliveryDetails.zip %></p>
            </div>
          <% }) %>
        </div>
        <div class="col-md-6 d-flex justify-content-end align-items-center">
          <!-- <img src="/images/cv6.png" class="img-fluid" style="max-width: 100%; height: auto; height: 55px; width:200px" alt="Logo here" /> -->
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-hover table-bordered">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Product Name</th>
                  <th scope="col" class="text-right">Quantity</th>
                  <th scope="col" class="text-right">Price</th>
                  <th scope="col" class="text-right">Total</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= product.item.productname %></td>
                  <td class="text-right"><%= product.quantity %></td>
                  <td class="text-right">&#8377; <%= product.item.price %></td>
                  <td class="text-right">&#8377; <%= product.item.price * product.quantity %></td>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="3" class="text-right">Subtotal:</td>
                  <td class="text-right">&#8377; <%= product.currentPrice*product.quantity %></td>
                </tr>
                <tr>
                  <td colspan="3" class="text-right">Shipping:</td>
                  <td class="text-right">Free</td>
                </tr>
                <tr>
                  <td colspan="3" class="text-right">Tax Amount:</td>
                  <td class="text-right">&#8377; <%= product.tax*product.quantity%></td>
                </tr>
                <tr>
                  <td colspan="3" class="text-right font-weight-bold">Grand Total:</td>
                  <td class="text-right font-weight-bold">&#8377; <%= product.tax*product.quantity + product.currentPrice*product.quantity %></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
      
  <script>
    // Disable right-click context menu
document.addEventListener('contextmenu', function(event) {
  event.preventDefault();
});

  </script>

  <!-- Bootstrap JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/>

  